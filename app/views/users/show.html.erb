<h1>
  <% if @user.name? %>
    <div class="text-centered">
      <%= "#{@user.name}'s Blocmarks" %>
    </div>
  <% else %>
    <%= "#{@user.email}'s Blocmarks" %>
  <% end %>
</h1>

<% @user.votes.where(value: 1).each do |vote| %>
  <div class="row">
    <% @show_bookmark = vote.bookmark %>

    <% object = LinkThumbnailer.generate(@show_bookmark.url, redirect_limit: 25) %>
    <%= object.title %>
    <% if @show_bookmark.url? %>
      <%= link_to(image_tag(object.images.first.source_url, size: "2X4"), object.url ) %>
    <% else %>
      <%= link_to(image_tag("icon.png", size: "2X4"), object.url ) %>
    <% end %>
  </div>
<% end %>