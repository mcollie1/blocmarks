<h1>
  <div class="text-centered">
    <% if @user.name? %>
      <%= "#{@user.name}'s Blocmarks" %>
    <% else %>
      <%= "#{@user.email}'s Blocmarks" %>
    <% end %>
  </div>
</h1>

<% @user.votes.where(value: 1).each do |vote| %>
  <div class="row">
    <% @show_bookmark = vote.bookmark.url %>
  </br>
    <%= vote.bookmark.title %>

    <% object = LinkThumbnailer.generate(@show_bookmark, redirect_limit: 25) %>
    <%= object.title %>
    <% if object.url? %>
      <%= link_to(image_tag(object.image, size: "2X4"), object.url ) %>
    <% else %>
      <%= link_to(image_tag("icon.png", size: "2X4"), object.url ) %>
    <% end %>
  </div>

<% end %>
