<h1>All Blocmarks</h1>
<% @bookmarks.each do |bookmark| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to bookmark.title, bookmark %>
      </h4>
      </br>
      <div class="row">
        <div class="col-md-8">
          <% object = LinkThumbnailer.generate('http://www.yahoo.com') %>
          <%= object.title %>
          <% if object.images? %>
            <%= link_to(image_tag(object.image), object.url ) %>
          <% else %>
            <%= link_to(image_tag("icon.png"), object.url ) %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= render partial: 'votes/voter', locals: { bookmark: @bookmark, url: @url } %>
        </div>
      </div>
    </div>
  </div>
<% end %>








<h1>All Blocmarks</h1>
<div class="media">
  <div class="media-body">
    <div class="media-heading">
      <% blocmark_titles = @bookmarks.map { |b| b["title"] } %>
      <% unique_titles = blocmark_titles.uniq %>
      <% unique_titles.each do | unique| %>
      <h4>
        <%= unique %>
      </h4>
          <% @bookmarks.each do |bookmark| %>
            <% if bookmark.title == unique %>
              <div class="row">
                <div class="col-md-20, col-md-2">
                  <% bookmark.urls.each do |url| %>
                    <% object = LinkThumbnailer.generate(url.url) %>
                    <%= object.title %>
                    <p></P>
                    <% if object.images? %>
                      <%= link_to(image_tag(object.image, size: "100x100"), object.url ) %>
                    <% else %>
                      <%= link_to(image_tag("icon.png", size: "100x100"), object.url ) %>
                    <% end %>      
                    
                    <%= render partial: 'votes/voter', locals: { bookmark: bookmark } %> 
                    
                  <% end %>
             
                  <% if policy(bookmark).destroy? %>
                    <%= link_to "Delete Blocmark", bookmark, method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this blocmark?' %> 
                  <% end %>
                </div>
              </div>
            <% else %>
              <% nil %>
            <% end %>
          <% end %>
        
      <% end %>
    </div>
  </div>
</div>
