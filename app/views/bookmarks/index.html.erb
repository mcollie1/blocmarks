<h1>All Blocmarks</h1>
<div class="media">
  <div class="media-body">
    <div class="media-heading">
      <% @bookmarks.each do |bookmark| %>
        <%= bookmark.title %>
        <div class="row">
          <div class="col-md-20 col-md-2">           
            <% object = LinkThumbnailer.generate(bookmark.url) %>
            
            <% if object.images? %>
              <%= link_to(image_tag(object.image, size: "100x100"), object.url ) %>
            <% else %>
              <%= link_to(image_tag("icon.png", size: "100x100"), object.url ) %>
            <% end %>
            <%= object.title %>      
            </br>
            
          </div>
        </div>        
      <% end %> 
    </div>
  </div>
</div>





